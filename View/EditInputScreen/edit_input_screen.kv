<CardSelectionButton>
    pos_hint : {"center_x": .5, "center_y": .5}
    style : "text"
    # md_bg_color="#303A29"
    radius : 5
    width : "140dp"
    theme_width : "Custom"
    size_hint_x : 1
    #theme_bg_color: "Custom"
    #md_bg_color: app.theme_cls.shadowColor 

<EditInputScreenView>
	MDBoxLayout:
        id:box_screen
        orientation: 'vertical'
        padding: "5dp"
        spacing: "5dp"
        MDLabel:
            adaptive_size: True
            pos_hint: {"center_x": .5,}
            id: "label_extra_deck_count"
            text: "Cards in Extra Deck: 15"
            font_style: "Headline"
            role: "medium"
            spacing: "5dp"
            padding: "5dp"
        MDDivider:
			size_hint_x: 1
			#pos_hint: {"center_y": .3}
            spacing: "5dp"
            padding: "5dp"
		GridLayout:
			pos_hint: {"center_x": .5}
			id: "xyz_grid"
			cols: 4
			size_hint_x: 1
			size_hint_y: 0.25
            spacing: "16dp"
            padding: "16dp"

            default_size_hint: 1, 1
            
            multiselect: True
            touch_multiselect: True
        MDDivider:
			size_hint_x: 1
			#pos_hint: {"center_y": .3}
            spacing: "5dp"
            padding: "5dp"
		MDGridLayout:
			pos_hint: {"center_x": .5}
			id: "fusion_grid"
			cols: 4
			size_hint_x: 1
			size_hint_y: 0.25
			spacing: "16dp"
            padding: "16dp"
            default_size_hint: 1, 1
            
            multiselect: True
            touch_multiselect: True
