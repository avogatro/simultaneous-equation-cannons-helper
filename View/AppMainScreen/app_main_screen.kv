<AppMainScreenView>
    MDBoxLayout:
        id:box_screen
        orientation: 'vertical'
        padding: "5dp"
        spacing: "5dp"
        MDLabel:
            adaptive_size: True
            pos_hint: {"center_x": .5,}
            
            id: "label_solution"
            text: "Click on Cards to get Solution"
            font_style: "Headline"
            role: "medium"
            spacing: "5dp"
            padding: "5dp"
        MDDivider:
			size_hint_x: 1
			#pos_hint: {"center_y": .3}
            spacing: "5dp"
            padding: "5dp"
        MDScrollView:
            pos_hint: {'left': 0}
            #size_hint: 1,1
            #size_hint_y: 0.9
            MDBoxLayout:
                id:boxed_content
                orientation: 'vertical'
                #adaptive_height: True
                #size: 1, 0.9
                #size_hint_x: 1
                #size_hint_y: None
                spacing: "5dp"
                padding: "5dp"
                #height: self.minimum_height
