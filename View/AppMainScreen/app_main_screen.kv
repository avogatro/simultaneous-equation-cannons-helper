<CardNumberSelectionButton>
    pos_hint : {"center_x": .5, "center_y": .5}
    style : "filled"
    radius : "5dp"
    border_radius : "5dp"
    size_hint : None, None
    padding: "2dp"
    spacing: "2dp"
    height: "40dp"
    width : "140dp"
    

<CustomGridLayout>
    height: self.minimum_height
    width: self.minimum_width
    size_hint_y:  None
    size_hint_x:  None
    spacing: "2dp"
    padding: "2dp"

<CustomLabel>
    font_style: "Title"
    role: "medium"
    theme_text_color: "Custom"
    bold: True
    halign: "center"

<AppMainScreenView>
    MDBoxLayout:
        id:box_screen
        orientation: 'vertical'
        padding: "5dp"
        spacing: "5dp"
        MDLabel:
            adaptive_size: True
            pos_hint: {"center_x": .5,}
            id: "label_solution"
            text: "Click on Cards to get Solution"
            font_style: "Headline"
            role: "medium"
            spacing: "5dp"
            padding: "5dp"
        MDDivider:
			size_hint_x: 1
            spacing: "5dp"
            padding: "5dp"
        CustomScrollView:
            size: self.size
            MDBoxLayout:
                id: boxed_content
                orientation: 'vertical'
                adaptive_height: True
                adaptive_width: True
                spacing: "1dp"
                padding: "1dp"
                
